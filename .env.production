# Production Environment Variables for llm.belltpo.com

# Server Configuration
SERVER_PORT=3001
NODE_ENV=production
DOMAIN=llm.belltpo.com
HTTPS=true

# Database Configuration
STORAGE_DIR=/app/server/storage

# JWT Secret (Generate a strong secret)
JWT_SECRET=your-super-secure-jwt-secret-key-here-change-this

# LLM Provider Settings (Configure your preferred provider)
LLM_PROVIDER=openai
OPENAI_API_KEY=your-openai-api-key-here

# Vector Database
VECTOR_DB=lancedb

# File Upload Limits
FILE_UPLOAD_SIZE_LIMIT=100

# CORS Settings
CORS_ORIGIN=https://llm.belltpo.com

# WebSocket Settings
WS_ENABLED=true

# Prechat Widget Settings
PRECHAT_WIDGET_URL=https://llm.belltpo.com/prechat

# Email Configuration (Optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Security Settings
DISABLE_TELEMETRY=true
ENABLE_HTTPS_REDIRECT=true

# Logging
LOG_LEVEL=info

# Custom Branding
BRAND_NAME=BellTPO Chat Assistant
BRAND_LOGO_URL=https://llm.belltpo.com/static/belltpo_logo.png
